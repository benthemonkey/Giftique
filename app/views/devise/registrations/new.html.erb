<div id="request-invite" class="modal" style="display: <%= @user.errors.any? ? 'block' : 'none';%>">
  <%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' } do |f| %>
  <div class="modal-header">
    <a class="close" data-dismiss="modal">&#215;</a>
    <h3>Request Invitation</h3>
  </div>
  <div class="modal-body">
    <%= f.error_notification %>
    <%= f.input :email, :placeholder => 'user@example.com' %>
  </div>
  <div class="modal-footer">
    <%= f.submit "Request Invitation", :class => "btn btn-primary", :id => 'invitation_button' %>
    <a class="btn" data-dismiss="modal" href="#">Close</a>
  </div>
  <% end %>
</div>
<div class="row">
  <div class="span6">
    <div>
      <img id="logo" src="assets/giftiquelogo.gif" style="width:500px; margin-top: 10px" />
      <h3>
        Delivering gift recommendations that strengthen relationships, Giftique uses social data to build a narrative between you and your gift recipient  to create unique and thoughtful gifting experiences.
      </h3>
    </div>
  </div>
  <div class="span6" id="romance-copy" style="text-align: center; margin-top: 10px">
    <iframe src="http://prezi.com/embed/lz6ftz8f05d0/?bgcolor=ffffff&amp;lock_to_path=1&amp;autoplay=yes&amp;autohide_ctrls=1" width="550" height="400" frameBorder="0"></iframe>
  </div>
</div>

<div id="call-to-action" style="text-align: center; margin-top: 30px; margin-bottom: 10px">
  <a class="btn btn-primary btn-large" data-toggle="modal" href="#request-invite">Request invite</a>
</div>